<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="squad.seven.bayarkas.Fragment.FragmentTambahKas">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/header"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="#00B294"
        android:text="Tambah Pembayaran"
        android:textSize="25dp"
        android:textColor="#ffffff"

        />

    <view
        android:layout_width="375dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
    </view>

    <android.support.v7.widget.CardView
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="#ffffff">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/nama_bayar"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:id="@+id/nama"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:hint="Nama"
                    android:paddingLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="#ffffff">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/kode_bayar"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:id="@+id/kode_pembayaran"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:hint="Kode Pembayaran"
                    android:paddingLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="#ffffff">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/penerima_bayar"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:hint="Penerima"
                    android:paddingLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="#ffffff">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/nominal_bayar"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:id="@+id/nominal_bayar"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:hint="Nominal Bayar"
                    android:paddingLeft="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="#ffffff">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tanggal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:id="@+id/tanggal_bayar"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:hint="Tanggal Bayar"
                    android:paddingLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:gravity="center"

        >

        <Button
            android:id="@+id/batal"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="#00B294"
            android:text="Batal"
            android:textSize="18dp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/simpan"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="#00B294"
            android:layout_marginLeft="50dp"
            android:text="Simpan"
            android:textSize="18dp"
            android:textColor="#ffffff"

            />

    </LinearLayout>

</LinearLayout>
