<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_simpan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="squad.seven.bayarkas.Fragment.FragmentSimpan">

    <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:id="@+id/gambar_ceklis"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:src="@drawable/gambar_ceklis"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/teks_bukti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/gambar_ceklis"
            android:gravity="center"
            android:text="Data telah berhasil di simpan\nTerima kasih sudah membayar\n:)"
            android:textSize="20dp" />

        <Button
            android:id="@+id/cetak_bukti_button"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/teks_bukti"
            android:background="@drawable/button_green"
            android:text="Cetak Bukti Pembayaran"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />

</RelativeLayout>
